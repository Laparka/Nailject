{
  "compilerOptions": {
    "target": "ES2017",
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "types": [
      "jest",
      "node"
    ],
    "allowJs": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "@tsinjector/*": [ "*" ]
    }
  },
  "compileOnSave": false,
  "include": ["bin/*", "generator/*", "api/*", "index.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}